
import hvf_event;
import output;
import habituation_handler;
import defs;

Block task {

    on_event:entry()
    {
        control.target = this;
        control.enable_key(KEY_Return, EVENT_START);
        control.enable_key(' '       , EVENT_START);
        control.enable_key(KEY_Escape, EVENT_STOP);

        control.button_box.disable_buttons();
        control.button_box.enable_button(int(BUTTON_LEFT), EVENT_START);
        control.button_box.enable_button(int(BUTTON_RIGHT), EVENT_STOP);
    }

    on_event:exit()
    {
        control.button_box.disable_buttons();
    }

    //--------- Habituation -----------

    Block habituation
    {
        on_event:entry()
        {

        }

        on_event:exit()
        {

        }

        Block trials
        {
            on_event:init()
            {
                num_items = MAX_HABITUATION_TRIALS;
            }

            Trial trial
            {
                on_event:init()
                {
                    habituation_handler.enter(this);
                }

                on_event:exit()
                {
                    TestOutput output;
                }
            }

            TransientPart test_hab_done
            {
                on_event:entry()
                {
                    if (habituation_done())
                        trials.leave();
                }
            }
        }
    }


