

enum ItemType
{
    HABITUATION,
    NOVEL,
}

record TestItem
{
    int         id;
    ItemType    type;
    string      snd_fn;
}


TestItem[..][..] hab_items =
{
    { // LIST 1
        {1, HABITUATION, "bep1"},
        {2, HABITUATION, "bep2"},
        {3, HABITUATION, "bep3"},
        {4, HABITUATION, "bep4"},
        {5, HABITUATION, "bep5"}
    },
    { // LIST 2
        {1, HABITUATION, "bip1"},
        {2, HABITUATION, "bip2"},
        {3, HABITUATION, "bip3"},
        {4, HABITUATION, "bip4"},
        {5, HABITUATION, "bip5"}
    }
};

void shuffle_hab_items()
{
    int i;
    while (i < hab_items.size)
    {
        hab_items[i].shuffle(0, hab_items[i].size);
        i++;
    }
}

